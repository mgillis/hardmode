    <ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
      <MealFine>1</MealFine>
    </products>
		<fixedIngredientFilter>
