<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <StatDef>
    <defName>RecruitPrisonerChance</defName>
    <label>recruit prisoner chance</label>
    <description>Base chance this person will recruit a prisoner.</description>
    <category>PawnSocial</category>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0.01</minValue>
    <toStringStyle>PercentTwo</toStringStyle>
    <skillNeedFactors>
      <li Class="SkillNeed_BaseBonus">
        <skill>Social</skill>
        <baseFactor>0</baseFactor>
        <bonusFactor>0.05</bonusFactor>
      </li>
    </skillNeedFactors>
    <activityFactors>
      <li>
        <activity>Talking</activity>
        <weight>0.9</weight>
      </li>
    </activityFactors>
  </StatDef>

  <StatDef>
    <defName>SocialImpact</defName>
    <label>social chat impact</label>
    <description>When this person interacts socially, this is how much the other person is affected.</description>
    <category>PawnSocial</category>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0.2</minValue>
    <toStringStyle>PercentTwo</toStringStyle>
    <skillNeedFactors>
      <li Class="SkillNeed_BaseBonus">
        <skill>Social</skill>
        <baseFactor>0.3</baseFactor>
        <bonusFactor>0.1</bonusFactor>
      </li>
    </skillNeedFactors>
    <activityFactors>
      <li>
        <activity>Talking</activity>
        <weight>0.9</weight>
      </li>
    </activityFactors>
  </StatDef>

  <StatDef>
    <defName>GiftImpact</defName>
    <label>diplomatic gift impact</label>
    <description>When this person gives gifts to another faction, this multiplier is applied to their impact on faction relations.</description>
    <category>PawnSocial</category>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0.4</minValue>
    <toStringStyle>PercentTwo</toStringStyle>
    <skillNeedFactors>
      <li Class="SkillNeed_BaseBonus">
        <skill>Social</skill>
        <baseFactor>0.5</baseFactor>
        <bonusFactor>0.05</bonusFactor>
      </li>
    </skillNeedFactors>
    <activityFactors>
      <li>
        <activity>Talking</activity>
        <weight>0.9</weight>
      </li>
    </activityFactors>
  </StatDef>


  <StatDef>
    <defName>TradePriceImprovement</defName>
    <label>trade price improvement</label>
    <description>When this person negotiates prices, buy and sell prices are improved by this percentage.</description>
    <category>PawnSocial</category>
    <defaultBaseValue>1</defaultBaseValue>
    <toStringStyle>PercentTwo</toStringStyle>
    <skillNeedFactors>
      <li Class="SkillNeed_BaseBonus">
        <skill>Social</skill>
        <baseFactor>0</baseFactor>
        <bonusFactor>0.005</bonusFactor>
      </li>
    </skillNeedFactors>
    <activityFactors>
      <li>
        <activity>Talking</activity>
        <weight>0.3</weight>
      </li>
      <li>
        <activity>Hearing</activity>
        <weight>0.3</weight>
      </li>
    </activityFactors>
  </StatDef>



</Defs>