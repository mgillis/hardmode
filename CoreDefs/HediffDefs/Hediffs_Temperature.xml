<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>Heatstroke</defName>
    <hediffClass>Hediff_Staged</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <label>heatstroke</label>
    <naturallyHealed>false</naturallyHealed>
    <stagedProps>
      <treatable>false</treatable>
      <treatmentDuration>0</treatmentDuration>
      <severityStages>
        <li>
          <label>initial-hidden</label>
          <isHidden>true</isHidden>
        </li>
        <li>
          <label>initial</label>
          <fromSeverity>0.04</fromSeverity>
          <modifiers>
            <actMods>
              <li>
                <activity>Consciousness</activity>
                <offset>-0.05</offset>
              </li>
            </actMods>
          </modifiers>
        </li>
        <li>
          <label>minor</label>
          <fromSeverity>0.2</fromSeverity>
          <modifiers>
            <actMods>
              <li>
                <activity>Moving</activity>
                <offset>-0.1</offset>
              </li>
              <li>
                <activity>Consciousness</activity>
                <offset>-0.10</offset>
              </li>
            </actMods>
          </modifiers>
        </li>
        <li>
          <label>serious</label>
          <fromSeverity>0.35</fromSeverity>
          <modifiers>
            <offsetPain>0.15</offsetPain>
            <actMods>
              <li>
                <activity>Moving</activity>
                <offset>-0.3</offset>
              </li>
              <li>
                <activity>Consciousness</activity>
                <offset>-0.20</offset>
              </li>
            </actMods>
          </modifiers>
        </li>
        <li>
          <label>extreme</label>
          <fromSeverity>0.62</fromSeverity>
          <isLifeThreatening>true</isLifeThreatening>
          <modifiers>
            <offsetPain>0.30</offsetPain>
            <actMods>
              <li>
                <activity>Consciousness</activity>
                <setMax>0.1</setMax>
              </li>
            </actMods>
          </modifiers>
        </li>
        <li>
          <label>deadly</label>
          <fromSeverity>0.99</fromSeverity>
          <isLifeThreatening>true</isLifeThreatening>
          <modifiers>
            <actMods>
              <li>
                <activity>Consciousness</activity>
                <setMax>0</setMax>
              </li>
            </actMods>
          </modifiers>
        </li>
      </severityStages>
    </stagedProps>
  </HediffDef>




