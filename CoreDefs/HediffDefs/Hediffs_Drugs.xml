<?xml version="1.0" encoding="utf-8" ?>
<Defs>



  <HediffDef>
    <defName>Alcohol</defName>
    <hediffClass>Hediff_Alcohol</hediffClass>
    <label>alcohol</label>
    <naturallyHealed>false</naturallyHealed>
    <thought>Inebriated</thought>   
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <stagedProps>
      <initialSeverity>0.15</initialSeverity>
      <treatable>false</treatable>
      <severityPerDay>-0.5</severityPerDay>
      <severityStages>
        <li>
          <label>buzzed-hidden</label>
          <isHidden>true</isHidden>
        </li>
        <li>
          <fromSeverity>0.1</fromSeverity>
          <label>warm</label>
          <painFactor>0.9</painFactor>
          <modifiers>
            <actMods>
              <li>
                <activity>Manipulation</activity>
                <offset>-0.02</offset>
              </li>
            </actMods>
          </modifiers>
        </li>
        <li>
          <fromSeverity>0.25</fromSeverity>
          <label>tipsy</label>
          <painFactor>0.8</painFactor>
          <modifiers>
            <actMods>
              <li>
                <activity>Consciousness</activity>
                <offset>-0.10</offset>
              </li>
            </actMods>
          </modifiers>
        </li>
        <li>
          <fromSeverity>0.4</fromSeverity>
          <label>drunk</label>
          <painFactor>0.5</painFactor>
          <vomitFrequency>0.035</vomitFrequency>
          <tale>Drunk</tale>
          <modifiers>
            <actMods>
              <li>
                <activity>Consciousness</activity>
                <offset>-0.35</offset>
              </li>
            </actMods>
          </modifiers>
        </li>
        <li>
          <fromSeverity>0.7</fromSeverity>
          <label>hammered</label>
          <painFactor>0.3</painFactor>
          <vomitFrequency>0.1</vomitFrequency>
          <modifiers>
            <offsetPain>0.05</offsetPain>
            <actMods>
              <li>
                <activity>Consciousness</activity>
                <offset>-0.60</offset>
              </li>
            </actMods>
          </modifiers>
        </li>
        <li>
          <fromSeverity>0.9</fromSeverity>
          <label>blackout</label>
          <painFactor>0.1</painFactor>
          <modifiers>
            <actMods>
              <li>
                <activity>Consciousness</activity>
                <setMax>0.1</setMax>
              </li>
            </actMods>
          </modifiers>
        </li>
      </severityStages>
    </stagedProps>
  </HediffDef>




  <HediffDef>
    <defName>Hangover</defName>
    <hediffClass>Hediff_Staged</hediffClass>
    <label>hangover</label>
    <naturallyHealed>false</naturallyHealed>
    <thought>Hungover</thought>
    <stagedProps>
      <initialSeverity>1</initialSeverity>
      <treatable>false</treatable>
      <severityPerDay>-0.5</severityPerDay>
      <severityStages>
        <li>
          <fromSeverity>0</fromSeverity>
          <label>slight</label>
          <modifiers>
            <actMods>
              <li>
                <activity>Consciousness</activity>
                <offset>-0.03</offset>
              </li>
            </actMods>
          </modifiers>
        </li>
        <li>
          <fromSeverity>0.15</fromSeverity>
          <label>strong</label>
          <modifiers>
            <actMods>
              <li>
                <activity>Consciousness</activity>
                <offset>-0.08</offset>
              </li>
            </actMods>
          </modifiers>
        </li>
        <li>
          <fromSeverity>0.40</fromSeverity>
          <label>pounding</label>
          <vomitFrequency>0.035</vomitFrequency>
          <modifiers>
            <actMods>
              <li>
                <activity>Consciousness</activity>
                <offset>-0.18</offset>
              </li>
            </actMods>
          </modifiers>
        </li>
        <li>
          <fromSeverity>0.6</fromSeverity>
          <label>hidden-drunk</label>
          <isHidden>true</isHidden>
        </li>
      </severityStages>
    </stagedProps>
  </HediffDef>



</Defs>