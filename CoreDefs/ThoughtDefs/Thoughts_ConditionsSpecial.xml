<?xml version="1.0" encoding="utf-8" ?>
<ThoughtDefs>


  <ThoughtDef>
    <defName>Imprisoned</defName>
    <workerClass>ThoughtWorker_Imprisoned</workerClass>
    <stages>
      <li>
        <label>imprisoned</label>
        <description>I hate being locked up.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SharedBedroom</defName>
    <workerClass>ThoughtWorker_SharedBedroom</workerClass>
    <stages>
      <li>
        <label>sharing bedroom</label>
        <description>Sharing a room with others is annoying. I want some privacy. </description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>


  <ThoughtDef>
    <defName>ColonistLeftUnburied</defName>
    <workerClass>ThoughtWorker_ColonistLeftUnburied</workerClass>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>colonist left unburied</label>
        <description>One of us died and we're just leaving them lying in the open. Nobody should be left like that. People deserve a decent burial.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>



  <ThoughtDef>
    <defName>HappyNude</defName>
    <workerClass>ThoughtWorker_PsychologicallyNude</workerClass>
    <requiredTraits>
      <li>Nudist</li>
    </requiredTraits>
    <stages>
      <li>
        <label>happily nude</label>
        <description>I'm nude and loving it! I feel so free and unconstrained and in touch with my surroundings!</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Naked</defName>
